{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "label": "webpack",
            "script": "watch",
            "isBackground": true,
            "promptOnClose": true,
            "problemMatcher": [
                {
                    "fileLocation": "relative",
                    "pattern": [
                        {
                            "regexp": "ERROR in \\[at-loader\\] \\./(.+):(\\d+):(\\d+)",
                            "file": 1,
                            "line": 2,
                            "column": 3
                        },
                        {
                            "regexp": ".*TS.*\\d+:*(.*)",
                            "message": 1
                        }
                    ],
                    "severity": "error",
                    "source": "ts",
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": {
                            "regexp": "Built at:"
                        },
                        "endsPattern": {
                            "regexp": ".*(hidden modules)"
                        }
                    }
                }
            ]
        },
        {
            "type": "docker-build",
            "label": "docker-build",
            "platform": "node",
            "dockerBuild": {
                "dockerfile": "${workspaceFolder}/Dockerfile",
                "context": "${workspaceFolder}",
                "pull": true
            }
        },
        {
            "type": "docker-run",
            "label": "docker-run: release",
            "dependsOn": [
                "docker-build"
            ],
            "platform": "node"
        },
        {
            "type": "docker-run",
            "label": "docker-run: debug",
            "dependsOn": [
                "docker-build"
            ],
            "dockerRun": {
                "env": {
                    "DEBUG": "*",
                    "NODE_ENV": "development"
                }
            },
            "node": {
                "enableDebugging": true
            }
        }
    ]
}